@model TestZL.Models.ViewModel.LoadItemViewModel
@using TestZL.Helpers
@inject TestZL.Services.Interfaces.IDictService  dictService
@{
    Layout = null;
}

<form asp-action="Load" method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group">
        <label asp-for="item.Name" class="control-label"></label>
        <input asp-for="item.Name" class="form-control" />
        <span asp-validation-for="item.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="item.IsContainsCyrillic" /> @Html.DisplayNameFor(model => model.item.IsContainsCyrillic)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="item.IsContainsLatin" /> @Html.DisplayNameFor(model => model.item.IsContainsLatin)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="item.IsContainsDigits" /> @Html.DisplayNameFor(model => model.item.IsContainsDigits)

            </label>
        </div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="item.IsContainsSpecialChars" /> @Html.DisplayNameFor(model => model.item.IsContainsSpecialChars)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="item.IsCaseSensitivity" /> @Html.DisplayNameFor(model => model.item.IsCaseSensitivity)
        </label>
    </div>


    <div class="form-group">
        <label asp-for="item.SelectedMarkupId" class="control-label"></label>
        <select asp-for="item.SelectedMarkupId" class="form-control" asp-items="@await dictService.GetMarkupsAsync()"></select>
        <span asp-validation-for="item.SelectedMarkupId" class="text-danger"></span>
    </div>

    <div class="form-group">
        @*<label asp-for="uploadedFile" class="control-label"></label>*@
        <input type="file" id="uploadedFile" name="uploadedFile" accept=".zip" /><br>
        <span asp-validation-for="uploadedFile" class="text-danger"></span>
    </div>
    <input type="hidden" id="TempFolder" name="TempFolder" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>   
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

